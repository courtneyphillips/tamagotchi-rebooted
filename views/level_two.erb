<!-- PROGRESS BARS FOR TASK LEVELS - IN PANEL DIV -->

<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">Current Levels</h4>
    </div>
    <div class="panel-body">

  <!--  change to style="width: tequila_level , for example, in order to display levels of each required task (food, play, etc.) in status bar. -->

  <span class="text-muted"><span class="glyphicon glyphicon-cutlery"></span>  Food</span>
  <br>
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= @tama.food_level %>%">
          <span class="sr-only">Food</span>
        </div>
      </div>

      <form action='/feed/<%= @tama.id %>/<%= @tama.level_id %>' method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="tama_id" value= "<%= @tama.id %>">

        <button type="submit" class="btn btn-success">Feed <%= @tama.name %></button>
    </form>

      <span class="text-muted"><span class="glyphicon glyphicon-bed"></span>  Sleep </span>
      <br>
      <div class="progress">
        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: <%= @tama.sleep_level %>%">
          <span class="sr-only">Tequila </span>
        </div>
      </div>

      <form action='/sleep/<%= @tama.id %>/<%= @tama.level_id %>' method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="tama_id" value= "<%= @tama.id %>">

        <button type="submit" class="btn btn-success">Nap <%= @tama.name %></button>
    </form>

      <span class="text-muted"><span class="glyphicon glyphicon-glass"></span>  Tequila </span>
      <div class="progress">
        <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= @tama.drink_level %>%">
          <span class="sr-only">Other </span>
        </div>
      </div>

      <form action='/drink/<%= @tama.id %>/<%= @tama.level_id %>' method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="tama_id" value= "<%= @tama.id %>">

        <button type="submit" class="btn btn-success">Take Shots With <%= @tama.name %></button>
    </form>

      <span class="text-muted"> <span class="glyphicon glyphicon-send"></span>  Play </span>
      <div class="progress">
        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <%= @tama.activity_level %>%">
          <span class="sr-only">80% Complete (danger)</span>
        </div>
      </div>

      <form action='/activity/<%= @tama.id %>/<%= @tama.level_id %>' method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="tama_id" value= "<%= @tama.id %>">

        <button type="submit" class="btn btn-success">Exercise <%= @tama.name %></button>
    </form>

    </div>
  </div>
</div><br><br>


  <h1>Decision Time</h1>

  <p class="question1">You Just Graduated From High School. What Will You Do Next?</p>

<div class="row question">
  <div class="col-sm-6">
  <form action="/question_two" method="post">
    <input type="hidden" id="tama_id" name="tama_id" value= <%= @tama.id %>>
    <input type="hidden" id="level_two" name="level_two" value=(-1*<%= @@score %>)>
    <input type="image" class = "choice" name="submit" src="/img/college.jpg" border="0" alt="Submit">
  </form>
</div>
<div class="col-sm-6">
  <form action="/question_two" method="post">
    <input type="hidden" id="level_two" name="level_two" value=100>
    <input type="hidden" id="tama_id" name="tama_id" value= <%= @tama.id %>>
    <input type="image" class = "choice" name="submit" src="/img/juggalo.jpg" border="0" alt="Submit">
  </form>
</div>

<div class="col-sm-6">
  <form action="/question_two" method="post">
    <input type="hidden" id="level_two" name="level_two" value=50>
    <input type="hidden" id="tama_id" name="tama_id" value= <%= @tama.id %>>
    <input type="image" class = "choice" name="submit" src="/img/meth.jpg" border="0" alt="Submit">
  </form>
</div>
</div>
